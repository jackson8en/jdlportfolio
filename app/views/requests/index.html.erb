<div class="row">
<h1>Listing requests</h1>
  <div class="pull-right range-query">
    <%= form_tag requests_path, method: :get do %>
    <%= text_field_tag 'search[date_from]', @search.date_from %>
    <%= text_field_tag 'search[date_to]', @search.date_to %>
    <%= submit_tag 'Search', class: 'btn search-button' %>
    <% end %>
  </div>
</div>

<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Topic</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.date.strftime("%I:%M %p - %A %d - %b") %></td>
        <td><%= request.topic %></td>
        <td><%= request.description %></td>
        <td><%= request.user %></td>
        <td><%= link_to 'Show', request, class: 'btn btn-mini' %></td>
        <td><%= link_to 'Edit', edit_request_path(request), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', request, method: :delete,  class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
<br>

<%= link_to 'New Request', new_request_path %>
